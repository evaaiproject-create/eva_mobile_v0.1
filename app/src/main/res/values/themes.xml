<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Eva" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary -->
        <item name="colorPrimary">@color/eva_primary</item>
        <item name="colorPrimaryVariant">@color/eva_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary -->
        <item name="colorSecondary">@color/eva_secondary</item>
        <item name="colorSecondaryVariant">@color/eva_secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background & Surface -->
        <item name="android:colorBackground">@color/eva_background</item>
        <item name="colorSurface">@color/eva_surface</item>
        <item name="colorOnSurface">@color/eva_text_primary</item>

        <!-- Error -->
        <item name="colorError">@color/eva_error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/eva_background</item>
        <item name="android:navigationBarColor">@color/eva_background</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>